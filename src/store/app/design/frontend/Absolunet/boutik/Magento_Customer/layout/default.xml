<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Magento\Customer\Block\Account\Customer" name="customer" template="Magento_Customer::account/customer.phtml" after="-">
                <container name="customer-links-list" htmlTag="ul" htmlClass="customer-links-list">
                    <block class="Magento\Customer\Block\Account\Link" name="my-account-link">
                        <arguments>
                            <argument name="label" xsi:type="string" translate="true">My Dashboard</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Customer\Block\Account\AuthorizationLink" name="authorization-link-login" template="Magento_Customer::account/link/authorization.phtml">
                        <arguments>
                            <argument name="is_sub" xsi:type="boolean">true</argument>
                        </arguments>
                    </block>
                </container>
            </block>
        </referenceBlock>
    </body>
</page>
